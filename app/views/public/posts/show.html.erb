<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/genre', spot_genres: @spot_genres %>
    </div>
    <div class='col-md-7 offset-md-1'>
      <h2>旅の詳細</h2>
      <div class='row'>
        <tr>
          <td>
            <%= link_to user_path do %>
              <%= image_tag @user.get_image(50,50) %>
            <% end %>
          </td>
          <td><%= @post.title %></td>
          <td><%= @post.created_at.strftime('%Y年%m月%d日') %></td>
        </tr>
        <tr>
          <th><%= image_tag @post.get_image(100,100) %></th>
          <th><%= @post.post_text %></th>
          <% if @post.user == current_user %>
            <td><%= link_to "投稿を削除", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          <td><%= render "public/favorites/favorite", post: @post %></td>
          <td>
            <p>コメント件数:<%= @post.post_comments.count %></p>
            <% @post.post_comments.each do |post_comment| %>
              <%= image_tag.post_comment.user.get_image(50,50) %>
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
              <% if post_comment.user == current_user %>
                <%= link_to "コメントを削除", post_commennt_path(post_comment.post, post_comment), method: :delete %>
              <% end %>
            <% end %>
          </td>
        </tr>
      </div>
      <div class='row pt-md-3'>
        <%= form_with model: @post_comment do |f| %>
          <%= f.text_area :comment, rows: '4', placahorder: "コメントをここに" %>
          <%= f.submit "送信する"%>
        <% end %>
      </div>
    </div>
  </div>
</div>