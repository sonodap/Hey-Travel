<div class='container'>
  <div class="text-center pt-md-3"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class='row'>
    <div class='col-md-12'>
      <h2 class='pt-md-3'>旅の投稿</h2>
      <%= form_with model: @post,url: posts_path, local:true do |f| %>
        <div class="form-group pt-md-3">
          <%= f.label "タイトル" %>
          <%= f.text_field :title, class: 'form-control title' %>
        </div>
        <div class="form-group pt-md-2">
          <%= f.label "写真選択" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class='form-group'>
          <%= f.label :prefectures_genre, "都道府県" %>
          <%= f.select :prefectures_genre, Post.prefectures_genres.keys.map {|k| [I18n.t("enums.post.prefectures_genre.#{k}"), k]} %>
          <%= f.label :spot_genre_id, "スポット" %>
          <%= f.select :spot_genre_id, SpotGenre.pluck(:spot_genre, :id) %>
        </div>
        <div class="form-group">
          <%= f.label "本文" %>
          <%= f.text_area :post_text, class: 'form-control post_text' %>
        </div>
        <div class="form-group text-center pt-md-4">
          <%= link_to "戻る", :back, class: 'btn btn-danger' %>
          <%= f.submit "投稿する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>