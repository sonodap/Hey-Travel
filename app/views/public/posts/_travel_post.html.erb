<table class='table'>
  <thead>
    <tr>
      <th>日付</th>
      <th>タイトル</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
        <td>
          <%= link_to post.title, posts_travel_post_path(post.id) %>
        </td>
        <% if user_signed_in? %>
          <td id="favorite_buttons_<%= post.id %>">
            <%= render "public/favorites/favorite", post: post %>
          </td>
        <% end %>
        <td>コメント数:<%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
