<table class='table'>
  <% posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
      <td>
        <%= form_with url: post_path(post.id), method: :get do |f| %>
          <%= f.hidden_field :id, value: post.id %>
          <%= f.submit post.title, class:"button-link" %>
        <% end %>
      </td>
      <td id="favorite_buttons_<%= post.id %>">
        <%= render "public/favorites/favorite", post: post %>
      </td>
      <td>コメント数:<%= post.post_comments.count %> </td>
    </tr>
  <% end %>
</table>
