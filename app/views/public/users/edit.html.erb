<div class='container'>
  <div class="text-center"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class='row'>
    <div class='col-md-12'>
      <div class='row justify-content-center pt-md-3'>
        <h2>会員編集画面</h2>
      </div>
      <div class='row justify-content-center pt-md-5'>
        <%= form_with model: @user, url: update_user_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control name" %>
          </div>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image, class: "form-control-file user_image", accept: 'image/*' %>
          </div>
          <div class="form-group">
            <%= f.label :introduction %>
            <%= f.text_area :introduction, class: "form-control introduction" %>
          </div>
          <div class="form-group">
            <%= f.submit "更新する", class: 'btn btn-secondary' %>
          </div>
        <% end %>
      </div>
      <div class='row justify-content-center pt-md-3'>
        <div class="form-group">
          <%= link_to "戻る", mypage_path, class: 'btn btn-block btn-success' %>
        </div>
        <div class="form-group pl-md-3">
          <%= link_to "退会する", unsubscribe_path, class: 'btn btn-block btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>