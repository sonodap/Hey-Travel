<div class='container'>
  <div class="text-center pt-md-3"><h5><strong><%= flash[:notice] %></strong></h5></div>
  <div class='row'>
    <div class='col-md-3 affset-md-1 d-flex align-items-center'>
      <%= render 'layouts/genre', spot_genres: @spot_genres %>
    </div>
    <div class='col-md-8'>
      <div class='row'><%= render 'info', user: @user %></div>
      <div class='row'>
        <h2 class='pt-md-4'>旅の記録</h2>
        <%= render 'public/posts/travel_post', posts: @posts %>
      </div>
      <%= paginate @posts %>
      <div class="mt-3">
        <%= link_to "戻る", :back, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
