<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>日付</th>
      <th>名前</th>
      <th>タイトル</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <h2 class='p-md-4'>検索結果</h2>
    <% @posts.each do |post| %>
      <tr>
        <td></td>
        <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to admin_user_path(id: post.user.id) do %>
              <%= post.user.name %>
            <% end %>
          <% else %>
            <%= link_to user_path(id: post.user.id) do %>
              <%= post.user.name %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% if admin_signed_in? %>
            <%= link_to post.title, admin_posts_show_path(id: post.id) %>
          <% else %>
            <%= link_to post.title, posts_travel_post_path(post.id) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

