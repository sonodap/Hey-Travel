<div class='container'>
  <div class='row'>
    <div class='col-md-3 affset-md-1 d-flex align-items-center'>
      <%= render 'layouts/genre', spot_genres: @spot_genres %>
    </div>
    <div class='col-md-8'>
      <div class='row'>
        <table class='table'>
          <thead>
            <tr>
              <th style="height: 140px; border: none;"><%= image_tag @user.get_image(100,100) %></th>
            </tr>
            <tr>
              <td>名前</td>
              <td><%= @user.name %></td>
            </tr>
            <tr style="border-bottom: 1px solid #dee2e6">
              <td>自己紹介文</td>
              <td><%= @user.introduction %></td>
            </tr>
            <tr>
              <th style="border: none"><%= link_to "退会処理", admin_users_unsubscribe_path(id: @user.id),class: "btn btn-danger" %></th>
            </tr>
          </thead>
        </table>
      </div>
      <div class='row'>
        <h2>旅の記録</h2>
        <table class='table'>
          <thead>
            <tr>
              <th>日付</th>
              <th>タイトル</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
                <td>
                  <%= link_to admin_posts_show_path(id: post.id) do %>
                    <%= post.title %>
                  <% end %>
                </td>
                <td>コメント数:<%= post.post_comments.count %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= paginate @posts %>
      <div class="mt-3">
        <%= link_to "戻る", :back, class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>

