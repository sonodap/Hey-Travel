      <div class='row'>
        <tr>
          <td><%= image_tag @user.get_image(50,50) %></td>
          <td>
            <%= link_to admin_user_path(@user.id) do %>
              <%= @post.user.name %>
            <% end %>
          </td>
          <td><%= @post.title %></td>
          <td><%= @post.created_at.strftime('%Y年%m月%d日') %></td>
        </tr>
        <tr>
          <th><%= image_tag @post.get_image(100,100) %></th>
          <th><%= @post.post_text %></th>
          <td><%= link_to "投稿を削除", @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <td>
            <p>コメント件数:<%= @post.post_comments.count %></p>
            <% @post.post_comments.each do |post_comment| %>
              <%= image_tag.post_comment.user.get_image(50,50) %>
              <%= post_comment.user.name %>
              <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %>
              <%= link_to "コメントを削除", admin_post_comment_destroy_path(post_comment.post, post_comment), method: :delete %>
            <% end %>
          </td>
        </tr>
      </div>
