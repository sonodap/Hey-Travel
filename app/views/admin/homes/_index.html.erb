<table class='table'>
  <% posts.each do |post| %>
    <tr>
      <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
      <td><%= image_tag post.user.get_image(70,70) %></td>
      <td>
        <%= link_to admin_user_path do %>
          <%= post.user.name %>
        <% end %>  
      </td>
      <td>
        <%= link_to admin_posts_show_path do %>
          <%= f.submit post.title, class:"button-link" %>
        <% end %>
      </td>
      <td>コメント数:<%= post.post_comments.count %></td>
    </tr>
  <% end %>
</table>
